@model EDNEVENTOS.Models.Eventos

@{
    ViewData["Title"] = "Criar Evento";
}



<form asp-action="Create">
    <div class="demo-card-wide mdl-card mdl-shadow--2dp">

        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <label asp-for="NomeEvento" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="NomeEvento" class="mdl-textfield__input" type="text" />
                <span asp-validation-for="NomeEvento" class="text-danger" />
            </div>
        </div><br />
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <label asp-for="CepEvento" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CepEvento" class="mdl-textfield__input" type="number" />
                <span asp-validation-for="CepEvento" class="text-danger" />
            </div>
        </div>
        <br />
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <label asp-for="LocalEvento" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="LocalEvento" class="mdl-textfield__input" type="text" />
                <span asp-validation-for="LocalEvento" class="text-danger" />
            </div>
        </div><br />
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <label asp-for="CidadeEvento" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CidadeEvento" class="mdl-textfield__input" type="text" />
                <span asp-validation-for="CidadeEvento" class="text-danger" />
            </div>
        </div><br />
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <label asp-for="BairroEvento" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="BairroEvento" class="mdl-textfield__input" type="text" />
                <span asp-validation-for="BairroEvento" class="text-danger" />
            </div>
        </div><br />
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <label asp-for="EstadoEvento" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="EstadoEvento" class="mdl-textfield__input" type="text" />
                <span asp-validation-for="EstadoEvento" class="text-danger" />
            </div>
        </div>
        <br />
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <label asp-for="NumeroLocalEvento" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="NumeroLocalEvento" class="mdl-textfield__input" type="number" />
                <span asp-validation-for="NumeroLocalEvento" class="text-danger" />
            </div>
        </div>
        <br />
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <label asp-for="ValorEvento" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ValorEvento" class="mdl-textfield__input" type="number" />
                <span asp-validation-for="ValorEvento" class="text-danger" />
            </div>
        </div><br />
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Criar" class="btn btn-success" />
            </div>
        </div>
        <br />
    </div>
</form>

<div>
    <a asp-action="Index" class="btn btn-primary">Voltar</a>
</div>


