@model EDNEVENTOS.Models.ProdutoEmEvento

@{
    ViewData["Title"] = "AdicionarProdutoEmEvento";
}

<h2>AdicionarProdutoEmEvento</h2>

<form asp-action="AdicionarProdutoEmEventoForm" method="post">
    <div class="form-horizontal">
        <h4>ProdutoEmEvento</h4>
        <hr />
        
        <div class="form-group">
            <label asp-for="Evento" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Evento.Evento" asp-items="ViewBag.Eventos" class="form-control"></select>
                <span asp-validation-for="Evento" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Produto" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Produto.IdProduto" asp-items="ViewBag.Produtos" class="form-control"></select>
                <span asp-validation-for="Produto" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Quantidade" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Quantidade" class="form-control" />
                <span asp-validation-for="Quantidade" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

