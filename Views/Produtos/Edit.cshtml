@model EDNEVENTOS.Models.Produtos

@{
    ViewData["Title"] = "Editar Produtos";
}

<h2>Produtos</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Editar Produto</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="NomeProduto" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="NomeProduto" class="form-control" />
                <span asp-validation-for="NomeProduto" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CategoriaProduto" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CategoriaProduto" class="form-control" />
                <span asp-validation-for="CategoriaProduto" class="text-danger" />
            </div>
        </div>
        @*<div class="form-group">
            <label asp-for="ImagemProduto" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ImagemProduto" class="form-control" />
                <span asp-validation-for="ImagemProduto" class="text-danger" />
            </div>
        </div>*@
   
        <div class="form-group">
            <label asp-for="QuantidadeProduto" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="QuantidadeProduto" class="form-control" />
                <span asp-validation-for="QuantidadeProduto" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ValorProduto" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ValorProduto" class="form-control" />
                <span asp-validation-for="ValorProduto" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Editar" class="btn btn-success" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index" class="btn btn-primary">Voltar</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
