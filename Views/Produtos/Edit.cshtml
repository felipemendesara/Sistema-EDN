@model EDNEVENTOS.Models.Produtos

@{
    ViewData["Title"] = "Editar Produtos";
}

<form asp-action="Edit">

    <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
    <div class="mdl-card mdl-shadow--2dp" style="padding:20px;">
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <input asp-for="IdProduto" class="mdl-textfield__input" type="text" />
            <label class="mdl-textfield__label" for="sample1">Nome do Produto</label>
            <span asp-validation-for="IdProduto" class="text-danger" />
        </div>
        <br />
               <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <input asp-for="NomeProduto" class="mdl-textfield__input" type="text" />
            <label class="mdl-textfield__label" for="sample1">Nome do Produto</label>
            <span asp-validation-for="NomeProduto" class="text-danger" />
        </div>
        <br />
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <div class="col-md-10">
                <input asp-for="CategoriaProduto" class="mdl-textfield__input" type="text" />
                <label class="mdl-textfield__label" for="sample1">Categoria do Produto</label>
                <span asp-validation-for="CategoriaProduto" class="text-danger" />
            </div>
        </div><br />
        <div class="form-group">
                <label asp-for="Imagem" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Imagem" type="file" class="form-control" />
                    <span asp-validation-for="Imagem" class="text-danger" />
                </div>
            </div>

        <br />
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">

            <div class="col-md-10">
                <input asp-for="ValorProduto" class="mdl-textfield__input" type="text" pattern="-?[0-9]*(\.[0-9]+)?" />
                <label class="mdl-textfield__label" for="sample2">Valor do Produto</label>
                <span asp-validation-for="ValorProduto" class="mdl-textfield__error">Apenas numeros!</span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Editar" class="btn btn-success" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index" class="btn btn-primary">Voltar</a>
</div>

