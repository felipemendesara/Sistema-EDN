@model IEnumerable<EDNEVENTOS.Models.Produtos>

@{
    ViewData["Title"] = "Produtos";
}
@if (ViewBag.Message == "Sucesso")
{
    <p class="ok-login-msg">Produto cadastrado com sucesso!</p>
}
@if (ViewBag.Message == "Erro")
{
    <p class="erro-login-msg">Erro ao cadastrar produto</p>

}
@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="mdl-button mdl-js-button mdl-button--fab mdl-button--colored" style="background:#B83C2F; right:-457px"><i class="material-icons" style="color:aliceblue">add</i></a>
    </p>
}
<table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp tabela-produtos">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoriaProduto)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.ImagemProduto)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.NomeProduto)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.ValorProduto)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoriaProduto)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.ImagemProduto)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.NomeProduto)
            </td>
        
            <td  style="color:green">
               R$ @Html.DisplayFor(modelItem => item.ValorProduto)
            </td>
            <td>@if (User.IsInRole("Admin"))
            {
                <a asp-action="Edit" asp-route-id="@item.IdProduto" class="btn btn-primary"><i class="material-icons">mode_edit</i></a>}
                <a asp-action="Details" asp-route-id="@item.IdProduto" class="btn btn-warning"><i class="material-icons">toc</i></a>
@if (User.IsInRole("Admin"))
{
                <a asp-action="Delete" asp-route-id="@item.IdProduto" class="btn btn-danger"><i class="material-icons">delete_sweep</i></a>}
            </td>
        </tr>
    }
</table>
<br />
