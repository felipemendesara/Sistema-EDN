@model IEnumerable<EDNEVENTOS.Models.Produtos>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoriaProduto)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.ImagemProduto)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.NomeProduto)
        </th>
